#!/bin/bash
source activate minion-seq
read -e -r -p 'Set the path to the SEQUENCING_SUMMARY generated by Albacore 1.0.0+ or Guppy 2.1.3+: ' set1
read -e -r -p 'Set the path to the BARCODING_SUMMARY generated by Guppy 2.1.3+: ' set2
read -e -r -p 'Set the path to an OUTPUT HTML FILE (without '.html'): ' set3
pycoQC \
--summary_file ${set1} \
--barcode_file ${set2} \
--html_outfile ${set3}.html \
--title ${set3} \
--verbose_level 2
